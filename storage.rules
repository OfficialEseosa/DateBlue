rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images - only the user can write
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat images - authenticated users can upload/read
    // Security is enforced at Firestore level (only match participants can send messages)
    match /chat_images/{matchId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }
  }
}
