rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images - only the user can write
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat images - only match participants can read/write
    match /chat_images/{matchId}/{allPaths=**} {
      // Check if user is a participant in this match
      function isMatchParticipant() {
        return request.auth.uid in firestore.get(/databases/(default)/documents/matches/$(matchId)).data.users;
      }
      
      allow read: if request.auth != null && isMatchParticipant();
      allow write: if request.auth != null && 
        isMatchParticipant() &&
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }
  }
}
