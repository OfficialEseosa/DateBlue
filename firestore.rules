rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'raphaelomorose@gmail.com';
    }
    
    match /users/{userId} {
      // Allow reading own profile or all profiles if authenticated (for discover)
      allow read: if request.auth != null;
      
      // Allow creating own profile OR admin can create test users
      allow create: if request.auth != null && (
        request.auth.uid == userId || 
        (isAdmin() && request.resource.data.isTestUser == true)
      );
      
      // Allow updating own profile (with restrictions) OR admin can update test users
      allow update: if request.auth != null && (
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'verified',
          'verificationCode', 
          'verificationCodeExpiry',
          'campusEmail'
        ])) ||
        (isAdmin() && resource.data.isTestUser == true)
      );
      
      // Allow deleting own account OR admin can delete test users
      allow delete: if request.auth != null && (
        request.auth.uid == userId || 
        (isAdmin() && resource.data.isTestUser == true)
      );
    }
    
    match /mail/{mailId} {
      allow read: if false;
      allow write: if request.auth != null;
    }
  }
}
