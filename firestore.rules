rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'raphaelomorose@gmail.com';
    }
    
    match /users/{userId} {
      // Allow reading own profile or all profiles if authenticated (for discover)
      allow read: if request.auth != null;
      
      // Allow creating own profile OR admin can create test users
      allow create: if request.auth != null && (
        request.auth.uid == userId || 
        (isAdmin() && request.resource.data.isTestUser == true)
      );
      
      // Allow updating own profile (with restrictions) OR admin can update test users
      // Note: receivedLikes is now managed by Cloud Functions only (onInteractionCreated)
      allow update: if request.auth != null && (
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'verified',
          'verificationCode', 
          'verificationCodeExpiry',
          'campusEmail',
          'receivedLikes'
        ])) ||
        (isAdmin() && resource.data.isTestUser == true)
      );
      
      // Allow deleting own account OR admin can delete test users
      allow delete: if request.auth != null && (
        request.auth.uid == userId || 
        (isAdmin() && resource.data.isTestUser == true)
      );
      
      // Interactions subcollection - users can read/write their own interactions
      // Also allow reading if the interaction document is about you (for match detection)
      match /interactions/{interactionId} {
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && (request.auth.uid == userId || request.auth.uid == interactionId);
      }
    }
    
    // Matches collection
    // Matches are created by Cloud Functions (onInteractionCreated)
    // Users can read/update/delete matches they are part of
    match /matches/{matchId} {
      // Helper to check if user is in the match
      function isMatchParticipant() {
        return request.auth != null && request.auth.uid in resource.data.users;
      }
      
      allow read: if request.auth != null && request.auth.uid in resource.data.users;
      allow create: if false; // Only Cloud Functions can create matches
      allow update: if isMatchParticipant(); // For voice call toggles, etc.
      allow delete: if isMatchParticipant(); // For unmatch
      
      // Messages subcollection
      match /messages/{messageId} {
        // Users can read messages in matches they're part of
        allow read: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.users;
        
        // Users can create messages if they're in the match
        allow create: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.users &&
          request.resource.data.senderId == request.auth.uid;
        
        // Users can update their own messages (edit, mark as read)
        allow update: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.users;
        
        // Only sender can delete their message (and must be in match)
        allow delete: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.users &&
          resource.data.senderId == request.auth.uid;
      }
    }
    
    // Reports collection
    match /reports/{reportId} {
      // Users can create reports
      allow create: if request.auth != null && 
        request.resource.data.reporterId == request.auth.uid;
      
      // Only admins can read/update reports
      allow read, update: if isAdmin();
      allow delete: if false;
    }
    
    match /mail/{mailId} {
      allow read: if false;
      allow write: if request.auth != null;
    }
  }
}
